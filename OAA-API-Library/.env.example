# ============================================
# Mobius Systems - OAA API Library
# Environment Configuration
# ============================================

# Database (PostgreSQL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://user:password@localhost:5432/mobius_db"

# JWT Secrets (GENERATE NEW ONES FOR PRODUCTION!)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-at-least-32-characters"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-at-least-32-characters"

# Session Validation
# Set to "true" to enable session revocation checking (slightly slower but more secure)
CHECK_SESSION_VALIDITY="false"

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
# Comma-separated list of allowed origins, or "*" for all
CORS_ORIGIN="http://localhost:5173,http://localhost:3000"

# Frontend URL (for magic link redirects)
FRONTEND_URL="http://localhost:5173"
APP_URL="http://localhost:3000"

# Email Configuration (for magic links in production)
# SMTP_HOST="smtp.example.com"
# SMTP_PORT=587
# SMTP_USER="noreply@example.com"
# SMTP_PASS="your-smtp-password"
# SMTP_FROM="Mobius Systems <noreply@mobius.systems>"

# ============================================
# Production Checklist:
# ============================================
# [ ] Generate new JWT_SECRET and JWT_REFRESH_SECRET
# [ ] Set NODE_ENV=production
# [ ] Configure proper CORS_ORIGIN (not "*")
# [ ] Set up email provider for magic links
# [ ] Enable CHECK_SESSION_VALIDITY=true
# [ ] Use proper DATABASE_URL with SSL
