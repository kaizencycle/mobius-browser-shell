# OAA API - Environment Configuration
# Copy to .env and fill in your values

# ============================================
# LLM Provider Configuration
# ============================================

# Default provider: anthropic, openai, or google
LLM_PROVIDER=anthropic

# Optional: Override specific model
# LLM_MODEL=claude-sonnet-4-20250514

# ============================================
# API Keys (set the ones you want to use)
# ============================================

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI (GPT)
OPENAI_API_KEY=sk-...

# Google (Gemini)
GOOGLE_API_KEY=...

# ============================================
# Server Configuration
# ============================================

PORT=5000
FLASK_DEBUG=false
