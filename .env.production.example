# Mobius Browser Shell - Production Environment Configuration
# Version: 1.0.0-beta.1
# Copy this file to .env.production and fill in your production values
#
# IMPORTANT: Never commit production secrets to version control!

# ============================================
# FRONTEND LABS (iframe targets)
# ============================================

# OAA Learning Hub - Production URL
VITE_OAA_URL=https://lab7-proof.onrender.com

# Reflections - Production URL
VITE_REFLECTIONS_URL=https://hive-api-2le8.onrender.com

# Citizen Shield - Production URL
VITE_CITIZEN_SHIELD_URL=https://lab6-proof-api.onrender.com

# HIVE (optional - leave empty for "Coming Soon" demo)
VITE_HIVE_URL=

# ============================================
# BACKEND APIs (Production Endpoints)
# ============================================

# OAA API Library
VITE_OAA_API_BASE=https://oaa-api-library.onrender.com

# Reflections API
VITE_REFLECTIONS_API_BASE=https://hive-api-2le8.onrender.com

# Citizen Shield API
VITE_CITIZEN_SHIELD_API_BASE=https://lab6-proof-api.onrender.com

# Command Ledger API
VITE_LEDGER_API=https://civic-protocol-core-ledger.onrender.com

# MIC Indexer API
VITE_MIC_API_BASE=https://gic-indexer.onrender.com

# Thought Broker API
VITE_THOUGHT_BROKER_API=https://mobius-systems.onrender.com

# Core API (OAA backend)
VITE_CORE_API_BASE=https://oaa-api-library.onrender.com

# Identity Service API
VITE_IDENTITY_API_BASE=https://mobius-identity-service.onrender.com

# MIC Wallet API
VITE_MIC_WALLET_API_BASE=https://mobius-mic-wallet-service.onrender.com

# ============================================
# FEATURE FLAGS (Production Settings)
# ============================================

# Enable live labs via iframe
VITE_USE_LIVE_LABS=true

# Enable MIC integration
VITE_MIC_ENABLED=true

# Use OAA API for MIC wallet operations
VITE_USE_OAA_WALLET=true

# Disable debug mode in production
VITE_DEBUG_MODE=false

# ============================================
# NETWORK CONFIGURATION
# ============================================

# Network mode: 'mainnet' for production, 'testnet' for testing
VITE_NETWORK_MODE=mainnet

# ============================================
# ANALYTICS & MONITORING (Optional)
# ============================================

# Error tracking (e.g., Sentry)
# VITE_SENTRY_DSN=your_sentry_dsn_here

# Analytics (e.g., Plausible, Fathom)
# VITE_ANALYTICS_ID=your_analytics_id_here

# ============================================
# AI SERVICES (If using AI features)
# ============================================

# Gemini API Key (server-side only - don't expose to client!)
# GEMINI_API_KEY=your_gemini_api_key_here
